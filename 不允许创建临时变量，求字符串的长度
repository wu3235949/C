#include<stdio.h>
int my_strlen(char* str)
{    if(*str !='\0')
	 return 1+my_strlen(str+1);
	 else
	 return 0;
}
int main() {
	int m;
	char a[]="we are one";
    m=my_strlen(a);
    printf("%d",m);
	return 0; 
}
//------------------------------------------
#include <stdio.h>
int my_strlen(char* str)
{
	char* start=str;
	char* end=str;
	while(*end != '\0')
	{
		end++;
	}
	return end-start;//指针-指针得中间元素个数
}
int main()
{
    char arr[]="bit";
    int len=my_strlen(arr);
    printf("%d\n",len);
	return 0;
}
